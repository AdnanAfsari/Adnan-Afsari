{%- style -%}
  button,
  input[type='submit'],
  input[type='reset'] {
    background: none;
    color: inherit;
    border: none;
    padding: 0;
    font: inherit;
    cursor: pointer;
    outline: inherit;
  }

  .grid-container {
    display: flex;
    flex-wrap: wrap;
    gap: 20px;
    justify-content: center;
  }

  .product-grid {
    width: calc(50% - 13.5px);
    max-width: calc(33.333% - 13.5px);
    aspect-ratio: 0.975;
    position: relative;
  }

  .product-grid img {
    object-fit: cover;
    object-position: center center;
    transition: opacity 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    display: block;
    max-width: 100%;
    width: 100%;
    height: 100%;
  }

  .modal-selector-quick-view {
    position: absolute;
    width: 30px;
    height: 30px;
    display: flex;
    align-items: center;
    border-radius: 100%;
    justify-content: center;
    line-height: 30px;
  }

  @media screen and (max-width: 749px) {
    .product-grid {
      width: calc(50% - 13.5px);
      max-width: calc(50% - 13.5px);
    }
  }
{%- endstyle -%}

<div class="page-width">
  <h2>{{ section.settings.title }}</h2>

  <div class="grid-container">
    {%- for block in section.blocks -%}
      {%- liquid
        assign product = block.settings.product
        assign random_number = 'now' | date: '%N' | modulo: 90
      -%}
      {%- case block.type -%}
        {%- when 'product' -%}
          <div class="product-grid">
            <img
              srcset="{{ product.featured_media | image_url }} {{ product.featured_media.width }}w"
              src="{{ product.featured_media | image_url: width: 533 }}"

              alt="{{ product.featured_media.alt | escape }}"
              class="motion-reduce"
              loading="lazy"
              width="{{ product.featured_media.width }}"
              height="{{ product.featured_media.height }}"
            >

            <button
              style="z-index: 99; cursor: pointer; top: {{ random_number }}%; right:{{ random_number }}%"
              data-target="{{ product.handle}}"
              class="modal-selector-quick-view"
            >
              {%- liquid
                render 'plus-icon'
              -%}
            </button>
          </div>
      {%- endcase -%}
    {%- endfor -%}
  </div>
</div>
{% schema %}
{
  "name": "Grid Test Section",
  "tag": "section",
  "class": "grid_test_section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Tisso vison in the wild"
    }
  ],
  "max_blocks": 6,
  "blocks": [
    {
      "name": "Product",
      "type": "product",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Product"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Grid Test Section"
    }
  ]
}
{% endschema %}
